{% extends 'base.html.twig' %}

{% block title %}Livre
{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <link rel="stylesheet" href="{{ asset('css/styleShowLivre.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navbarStyle.css') }}">
{% endblock %}

{% block body %}
   <div class="container mt-5" style="margin-left: 100px;">
    <div class="row">

        <div class="col-8" style="margin-left: 30px;margin-right: 10px">
            <div class="row">
                <div class="col-sm-8">
                    <h1>Livre</h1>
                </div>
                <div class="col" style="padding-left: 20px;">
                    <a class="btn" href="{{ path('livre_index') }}" style="background-color: #26a9e0"><i class="bi bi-skip-backward" style="color:white;font-size:20px;margin-left: 10px;"></i></a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn" href="{{ path('livre_edit', {'id': livre.id}) }}" style="background-color: #faaf40"><i class="bi bi-pen" style="color:white;font-size:20px;margin-left: 10px;"></i></a>
                        {{ include('livre/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>

            <div class="row">
                <div class="card mt-2" style="padding: 30px 40px;">
                    <div class="row ligneLiv">
                        <div class="row">
                            <div class="col-4">
                                Id :
                            </div>
                            <div class="col-7">
                                {{ livre.id }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Isbn :
                            </div>
                            <div class="col-7">
                                {{ livre.isbn }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Titre :
                            </div>
                            <div class="col-7">
                                {{ livre.titre }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Nombre pages :
                            </div>
                            <div class="col-7">
                                {{ livre.nombrePages }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Date de parution :
                            </div>
                            <div class="col-7">
                                {{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d') : '' }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                Note :
                            </div>
                            <div class="col-7">
                                {{ livre.note }}
                            </div>
                        </div>
                        <div class="row" style="padding-bottom: 20px">
                            <div class="col-4">
                                Genres :
                            </div>
                            <div class="col-7">
                                {% for genre in livre.genres %}
                                    <span style="padding:8px 15px; background-color: rgba(38,169,224,0.79); border-radius: 8px">
							{{ genre }}
                           </span><span style="padding-left: 10px; padding-right: 10px"> | </span>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="row" style="padding-bottom: 20px">
                            <div class="col-4">
                                Auteurs :
                            </div>
                            <div class="col-7">
                                {% for auteur in livre.auteurs %}
                                    <span style="padding:8px 10px; background-color: rgba(250,84,177,0.85); border-radius: 8px">
							{{ auteur }}
                           </span><span style="padding-left: 10px; padding-right: 10px"> | </span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col" style="margin-left: 40px;">
            <img src="/livre.jpg" width="330" height="580">
        </div>

    </div>

   </div>
{% endblock %}
